<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zhengsheng.administrator.childteach.activity.MainActivity">

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信授权" />
    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textColor="#444"
        android:id="@+id/tv_state"
        android:layout_alignBaseline="@id/btn_login"
        android:layout_toRightOf="@id/btn_login"
        android:text="状态："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="18sp"
        android:textColor="#ff1111"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_state"
        android:layout_alignBaseline="@id/btn_login"
        android:id="@+id/tv_type"
        android:text="待授权"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/btn_login"
        android:id="@+id/btn_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取微信用户信息" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_user_info"
        android:id="@+id/ll_nick_name"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称:"/>
        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_marginLeft="10dp"
            android:textColor="#444"
            android:textSize="20sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_nick_name"
        android:id="@+id/ll_sex"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别:"/>
        <TextView
            android:id="@+id/tv_sex"
            android:layout_marginLeft="10dp"
            android:textColor="#444"
            android:textSize="20sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_sex"
        android:id="@+id/ll_id"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OpenID:"/>
        <TextView
            android:id="@+id/tv_id"
            android:layout_marginLeft="10dp"
            android:textColor="#444"
            android:textSize="20sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_id"
        android:id="@+id/ll_access_token"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="access_token:"/>
        <TextView
            android:id="@+id/tv_access_token"
            android:layout_marginLeft="10dp"
            android:textColor="#444"
            android:textSize="20sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_access_token"
        android:id="@+id/ll_refresh_token"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="refresh_token:"/>
        <TextView
            android:id="@+id/tv_refresh_token"
            android:layout_marginLeft="10dp"
            android:textColor="#444"
            android:textSize="20sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_refresh_token"
        android:id="@+id/ll_unionid"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unionid:"/>
        <TextView
            android:id="@+id/tv_unionid"
            android:layout_marginLeft="10dp"
            android:textColor="#444"
            android:textSize="20sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
